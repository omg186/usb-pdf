{
  "compilerOptions": {
    "target": "ES2017",
    "module": "CommonJS",
    "moduleResolution": "node",
    "importHelpers": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "baseUrl": "./",
    "strict": true,
    "paths": {
      "@/*": [
        "src/render/*"
      ],
      "@src/*": [
        "src/*"
      ],
      "@root/*": [
        "./*"
      ]
    },
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src",
    "typings"
  ]
}